#include<stdio.h>
main()
{
printf("Pick an item : \n1. Pizza Rs239 \n2. Burger Rs 129 \n3. Pasta Rs 179 \n4. French Fries Rs 99 \n5. Sandwich Rs 149" );

int choice=0;
scanf("%d",&choice);
switch (choice)
{
case 1:
printf("you picked Pizza  Rs239.");

break;

case 2:
printf("you picked Burger Rs129.");

break;

case 3:
printf("you picked Pasta Rs 179 .");

break;

case 4:
printf("you picked French Fries Rs 99 .");

break;

case 5:
printf("you picked Sandwich Rs 149 .");

break;

default : printf("Invalid choice");
}
}
